<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- <item name="android:windowBackground">@drawable/app_background</item> -->
    </style>

    <style name="textCenter" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="textCenter.currentTimes">
    </style>

        <style name="textCenter.currentTimes.dayWeek">
            <item name="android:textColor">#4c4c4c</item>
            <item name="android:textSize">16sp</item>
        </style>

        <style name="textCenter.currentTimes.labels">
            <item name="android:textColor">#959595</item>
        </style>

        <style name="textCenter.currentTimes.now">
            <item name="android:textColor">@color/md_green</item>
        </style>

    <style name="timeBox">
        <item name="android:background">#f8f8f8</item>
    </style>

    <style name="entryForm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

        <style name="entryForm.wrapper">
            <item name="android:orientation">vertical</item>
        </style>

        <style name="entryForm.wrapper.outer">
            <item name="android:background">@android:color/transparent</item>
            <item name="android:layout_marginLeft">15dp</item>
            <item name="android:layout_marginRight">15dp</item>
        </style>

        <style name="entryForm.wrapper.inner">
            <item name="android:background">#ffffff</item>
            <item name="android:paddingTop">10dp</item>
        </style>

        <style name="entryForm.header">
            <item name="android:textColor">#acacac</item>
            <item name="android:textSize">17sp</item>
            <item name="android:text">Current entry details:</item>
            <item name="android:textStyle">bold</item>
            <item name="android:layout_marginBottom">2dp</item>
        </style>

        <style name="entryForm.formControl">
            <item name="android:layout_marginLeft">10dp</item>
            <item name="android:layout_marginRight">10dp</item>
        </style>

            <style name="entryForm.formControl.label">
                <item name="android:textColor">#4c4c4c</item>
                <item name="android:textSize">18sp</item>
                <item name="android:layout_marginBottom">2dp</item>
            </style>

            <style name="entryForm.formControl.text_field">
                <item name="android:background">@drawable/entry_form_text_field_bg</item>
                <item name="android:padding">6dp</item>
                <item name="android:textColor">@color/md_emphasis</item>
                <item name="android:textSize">20sp</item>
                <item name="android:layout_marginBottom">8dp</item>
            </style>

                <style name="entryForm.formControl.text_field.text_area">
                    <item name="android:layout_height">60dp</item>
                    <item name="android:gravity">top</item>
                </style>

        <style name="entryForm.submitButton">
            <item name="android:padding">10dp</item>
            <item name="android:background">@color/md_green</item>
            <item name="android:textColor">#ffffff</item>
            <item name="android:gravity">center</item>
            <item name="android:text">Log</item>
            <item name="android:textSize">21sp</item>
            <item name="android:textStyle">bold</item>
        </style>

    <style name="mdDialog">
    </style>

        <style name="mdDialog.title">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">60dp</item>
            <item name="android:background">@color/md_button_bg</item>
            <item name="android:layout_gravity">center_horizontal</item>
            <item name="android:gravity">center</item>
            <item name="android:textColor">@color/white_color</item>
            <item name="android:textSize">24sp</item>
        </style>

        <style name="mdDialog.choices">
        </style>

            <style name="mdDialog.choices.textView">
                <item name="android:textColor">#000</item>
                <item name="android:textSize">21sp</item>
                <item name="android:padding">6dp</item>
            </style>

</resources>
