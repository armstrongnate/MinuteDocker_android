<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.app.CurrentEntryActivity$PlaceholderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f8f8f8">

        <!-- current -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".70"
            android:orientation="vertical">

            <TextView
                style="@style/textCenter.currentTimes.labels"
                android:text="CURRENT"/>

            <TextView
                style="@style/textCenter.currentTimes.now"
                android:text="1:50:37"
                android:id="@+id/current_duration"/>

        </LinearLayout>
        
        <!-- day and week -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".30"
            android:orientation="vertical">

            <!-- day -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/textCenter.currentTimes.dayWeek"
                    android:text="02:15"/>

                <TextView
                    style="@style/textCenter.currentTimes.labels"
                    android:text="Today"/>

            </LinearLayout>

            <!-- week -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/textCenter.currentTimes.dayWeek"
                    android:text="34:58"/>

                <TextView
                    style="@style/textCenter.currentTimes.labels"
                    android:text="Week"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
