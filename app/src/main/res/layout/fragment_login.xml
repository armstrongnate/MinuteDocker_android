<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.app.LoginActivity$PlaceholderFragment">

    <TextView
        android:text="MinuteDockr"
        android:id="@+id/logo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:textColor="@color/md_dark_green"/>

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/logo_text"
        android:layout_marginTop="100dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/login_username"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:background="@color/white_color"
            android:paddingLeft="10dp"
            android:textSize="18sp"
            android:inputType="textEmailAddress"
            android:hint="Email"/>

      <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/login_password"
        android:inputType="textPassword"
        android:layout_marginTop="8dp"
        android:background="@color/white_color"
        android:paddingLeft="10dp"
        android:textSize="18sp"
        android:hint="Password"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Login"
            android:id="@+id/button"
            android:layout_marginTop="8dp"
            android:background="@color/md_button_bg"
            android:textColor="@color/white_color"
            android:textSize="20sp"/>
    </LinearLayout>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/api_key_help"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="7dp"
        android:src="@drawable/help_icon"/>

</RelativeLayout>
